#guide {
  h1, h2, h3, h4, h5, h6 {
    /* Relative position allows laying out the edit me links inside the header. */
    position: relative;
    font-family: Inter;
    /* Override the "funny" line height from bootstrap. */
    line-height: normal;
    &:hover a[id][href] {
      display: block;
      position: absolute;
      bottom: 3px;
      margin: 0;
      padding: 0;
      left: -20px;
      width: 100%;
      height: 1em;
      background-repeat: no-repeat;
      background-position: 0% 50%;
      background-image: inline("img/link.png");
    }
  }
  h1 {
    font-size: 36px;
    margin: 10px 0 30px;
    font-weight: 550;
    a { font-weight: 550; }
  }
  h2 {
    font-size: 32px;
    margin: 20px 0;
    font-weight: 550;
    a { font-weight: 550; }
  }
  h3 {
    font-size: 26px;
    font-weight: 550;
    a { font-weight: 550; }
  }
  h4 {
    font-size: 22px;
    font-weight: 550;
    a { font-weight: 550; }
  }
  h5 {
    font-size: 18px;
    font-weight: 550;
    a { font-weight: 550; }    
  }
  /* h3-h6 are generally inside the page so we space them out a bit more. */
  h3 {
    margin: 48px 0 10px;
  }
  
  h4 {
    margin: 48px 0 10px;
  }
  
  h5, h6 {
    margin: 48px 0 10px;
  }

  /* Points folks to "edit" pages in github so they can contribute
   * to the docs! */
  .edit_me {
    right:0;
    position: absolute;
    font-size: 14px;
    top: 0;
    z-index: 1000;
    padding-top: 26px;
    line-height: 1;
    opacity: 0.3;
    background-repeat: no-repeat;
    background-image: inline("img/edit-me.png");
    &:hover {
      opacity: 1;
    }
  }
}
